# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=30

[arch_updates]
command=$SCRIPT_DIR/arch_updates
interval=3600
align=center
color=#cccccc

[backlight]
command=$SCRIPT_DIR/backlight
label=BRI 
interval=once
signal=20
align=center
color=#cccccc

[battery]
command=$SCRIPT_DIR/battery
interval=5
LABEL=BAT 
align=center
color=#cccccc

[volume]
command=$SCRIPT_DIR/volume
LABEL=VOL 
interval=once
signal=10
align=center
color=#cccccc

[memory]
command=$SCRIPT_DIR/memory
label=MEM 
interval=10
align=center
color=#cccccc

[cpu_usage]
command=$SCRIPT_DIR/cpu_usage
interval=10
label=CPU 
align=center
color=#cccccc

[time]
command=date '+%B %d %T'
interval=1
align=center
color=#cccccc
